<div class="row">
  <div class="col m6 offset-m3 center">
    <h5>Log in</h5>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.text_field :email, :class => "validate", :placeholder => "email" %>
      </div>

      <div class="input-field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, :id => "email", :class => "validate", :placeholder => "Password", autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Log in</button>
      <%= link_to "Forgot password", new_user_password_path, :class => "btn waves-effect waves-light" %>
    <% end %>

  </div>
</div>
